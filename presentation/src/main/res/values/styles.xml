<resources>

    <style name="Theme.Application.Base" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Darcula -->
    <style name="Theme.Darcula" parent="Theme.Application.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="md_ripple_color">?android:colorControlHighlight</item>
        <item name="md_color_button_text">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
    </style>

    <!-- TextButton -->
    <style name="Widget.Darcula.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="rippleColor">?android:colorControlHighlight</item>
        <item name="cornerRadius">2dp</item>
    </style>

    <!-- Light PopupMenu for Dark Theme -->
    <style name="Theme.Darcula.PopupMenu" parent="Theme.MaterialComponents.Light">
        <item name="popupMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>
    </style>


    <style name="Theme.FullScreenGame" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
